{
    "extends": ["next", "prettier"],
    "plugins": ["import"],
    "rules": {
        "import/order": [
            "error",
            {
                "groups": ["builtin", "external", "internal"],
                "pathGroups": [
                    {
                        "pattern": "react",
                        "group": "external",
                        "position": "before"
                    },
                    {
                        "pattern": "next",
                        "group": "external",
                        "position": "before"
                    },
                    {
                        "pattern": "@/",
                        "group": "internal"
                    }
                ],
                "pathGroupsExcludedImportTypes": ["react"],
                "newlines-between": "always",
                "alphabetize": {
                    "order": "asc",
                    "caseInsensitive": true
                }
            }
        ]
    }
}
